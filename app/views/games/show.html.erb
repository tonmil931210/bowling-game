<p id="notice"><%= notice %></p>

<p>
  <strong>Winner:</strong>
  <%= @game.winner %>
</p>

<%= link_to 'Back', games_path %>

<div>
    <%= button_to  'Add a frame', new_game_frame_path(@game.id), :method => "get"%>
</div>

<% @game.frame_by_users.each do |player| %>

<h4>Player: <%= player.user.username %></h4>
<h4>Total Score: <%= player.final_score %></h4>

<h1>Frames</h1>
<table>
  <thead>
    <tr>
      <th>Try1</th>
      <th>Try2</th>
      <th>Try3</th>
      <th>Score</th>
      <th>Turn</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% player.frames.each do |frame| %>
      <tr>
        <td><%= frame.try1 %></td>
        <td><%= frame.try2 %></td>
        <td><%= frame.try3 %></td>
        <td><%= frame.score %></td>
        <td><%= frame.turn %></td>
        <td><%= frame.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %> 